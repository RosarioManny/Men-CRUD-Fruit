<!-- views/fruits/show.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= fruit.name %></title> <!-- Dynamic title based on fruit name -->
  </head>
  <body>
    <a href="/fruits/">Back to Fruits</a>

    <h1><%= fruit.name %></h1>
    <% if (fruit.ripe) { %>
        <p>This fruit is ready to eat!</p>
      <% } else { %>
        <p>This fruit is not ready to eat!</p>
      <% } %>
      <form action="/fruits/<%=fruit._id%>?_method=DELETE" method="POST">
        <button type="submit">Delete <%= fruit.name %></button>
      </form>
      <a href="/fruits/<%= fruit._id %>/edit">Edit <%= fruit.name %></a>
        <a href="/fruits">Back to Fruits</a>
<!-- "Forms typically support only GET or POST methods, but to send a DELETE request, we use ?_method=DELETE in the URL. 
 This makes the server treat the POST as DELETE, using the method-override middleware that we installed ;)." -->
  </body>
</html>
